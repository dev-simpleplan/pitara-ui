<section class="side-scroll">
  <div class="side-scroll-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'slide_1' %}
          <div class="ss-item slide_1">
            <div class="container-fluid">
              <div class="ss-item-in">
                <div class="left">
                  <div class="head">
                    <div class="logo">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_7.svg?v=1758698597"
                        alt="Pitara Brand Icon"
                        class="icons">
                    </div>
                    <h2>{{ block.settings.head }}</h2>
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                  <div class="stamp">
                    <img
                      src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/f1a0e24df3d1fecfca1fb79a430576fe3ee42a4b.png?v=1758698730"
                      alt="Pitara Stamp"
                      class="icon">
                  </div>
                </div>
                <div class="right"></div>
              </div>
            </div>
          </div>
      {% else %}
        {% endcase %}
      {% endfor %}
    </div>
  </section>

  {% schema %}
    {
      "name": "Side Scroll Section",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Add Video"
        }, {
          "type": "image_picker",
          "id": "stamp",
          "label": "Add your stamp"
        }, {
          "type": "image_picker",
          "id": "key",
          "label": "Add key icon"
        }, {
          "type": "image_picker",
          "id": "keyhole",
          "label": "Add keyhole icon"
        }
      ],
      "blocks": [
        {
          "name": "Slide 1",
          "type": "slide_1",
          "limit": 1,
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Add Image"
            },
            {
              "type": "textarea",
              "id": "head",
              "label": "Heading"
            },
            {
              "type": "richtext",
              "id": "text",
              "label": "Content"
            },
            {
              "type": "text",
              "id": "img_loc",
              "label": "Add Image Label"
            }, {
              "type": "text",
              "id": "img_time",
              "label": "Add Image Label"
            }
          ]
        }
      ]
    }
  {% endschema %}