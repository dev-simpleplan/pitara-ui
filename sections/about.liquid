<section class="side-scroll">
  <div class="side-scroll-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'slide_1' %}
          <div class="ss-item slide_1">
            <div class="container-fluid">
              <div class="ss-item-in">
                <div class="left">
                  <div class="head">
                    <div class="logo">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_7.svg?v=1758698597"
                        alt="Pitara Brand Icon"
                        class="icons">
                    </div>
                    <h2>{{ block.settings.head }}</h2>
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                  <div class="stamp">
                    <img
                      src="{{ section.settings.stamp |  img_url: 'master' }}"
                      alt="Pitara Stamp"
                      class="icons">
                  </div>
                </div>
                <div class="right">
                  <img
                    src="{{ block.settings.image |  img_url: 'master' }}"
                    alt=""
                    class="icons">
                </div>
              </div>
            </div>
          </div>
        {% when 'slide_2' %}
          <div class="ss-item slide_2">
            <div class="container-fluid">
              <div class="ss-item-in">
                <div class="left">
                  <div class="head">
                    <div class="logo">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_7.svg?v=1758698597"
                        alt="Pitara Brand Icon"
                        class="icons">
                    </div>
                    <h2>{{ block.settings.head }}</h2>
                  </div>
                  <div class="ss2_bigimg pos-rel">
                    <img
                      src="{{ block.settings.left_image | img_url: 'master' }}"
                      alt=""
                      class="img ab">
                  </div>
                  <div class="stamp">
                    <img
                      src="{{ section.settings.stamp |  img_url: 'master' }}"
                      alt="Pitara Stamp"
                      class="icons">
                  </div>
                </div>
                <div class="right">
                  <div class="ss2_smimg">
                    <img
                      src="{{ block.settings.right_image |  img_url: 'master' }}"
                      alt=""
                      class="icons">
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% when 'slide_3' %}
          <div class="ss-item slide_3">
            <div class="container-fluid">
              <div class="ss-item-in" style="background-image: url({{ block.settings.background |  img_url: 'master' }});">
                <div class="txt_wrap">
                  <div class="head">
                    <h2>{{ block.settings.head }} <img src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_5.svg?v=1758800224" alt=""></h2>
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                </div>
                <div class="ss3_img">
                  <img
                    src="{{ block.settings.image |  img_url: 'master' }}"
                    alt=""
                    class="icons">
                </div>
              </div>
            </div>
          </div>
        {% when 'slide_4' %}
          <div class="ss-item slide_4">
            <div class="container-fluid">
              <div class="ss-item-in">
                <div class="left">
                  <div class="head">
                    <h2>{{ block.settings.head }} <img src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_5_1.svg?v=1758801532" alt=""></h2>
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                  <div class="ss4_smimg">
                    <img
                      src="{{ block.settings.left_image | img_url: 'master' }}"
                      alt=""
                      class="icons">
                  </div>
                </div>
                <div class="right">
                  <div class="ss4_ bigimg pos-rel">
                    <img
                      src="{{ block.settings.right_image |  img_url: 'master' }}"
                      alt=""
                      class="img ab">
                  </div>
                  <div class="ss4_socials">
                    <p>Follow us on:</p>
                    <div class="ss4_sm">
                      <a href="{{ block.settings.insta_url }}" target="_blank">
                        <img
                          src="{{ block.settings.insta | img_url: 'master' }}"
                          alt="Instagram Icon"
                          class="icons">
                      </a>
                      <a href="{{ block.settings.youtube_url }}" target="_blank">
                        <img
                          src="{{ block.settings.youtube | img_url: 'master' }}"
                          alt="Youtube Icon"
                          class="icons">
                      </a>
                      <a href="{{ block.settings.tiktok_url }}" target="_blank">
                        <img
                          src="{{ block.settings.tiktok | img_url: 'master' }}"
                          alt="TikTok Icon"
                          class="icons">
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% when 'slide_5' %}
          <div class="ss-item slide_5" style="background-image: url({{ block.settings.background | img_url: 'master' }})">
            <div class="container-fluid">
              <div class="ss-item-in pos-rel">
                <img
                  src="{{ block.settings.image | img_url: 'master' }}"
                  alt=""
                  class="img ab">
              </div>
            </div>
          </div>
      {% else %}
        {% endcase %}
      {% endfor %}
    </div>
  </section>

