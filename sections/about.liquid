<section class="side-scroll">
  <div class="side-scroll-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'slide_1' %}
          <div class="ss-item slide_1">
            <div class="container-fluid">
              <div class="ss-item-in">
                <div class="left">
                  <div class="head">
                    <div class="logo">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_7.svg?v=1758698597"
                        alt="Pitara Brand Icon"
                        class="icons">
                    </div>
                    <h2>{{ block.settings.head }}</h2>
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                  <div class="stamp">
                    <img
                      src="{{ section.settings.stamp |  img_url: 'master' }}"
                      alt="Pitara Stamp"
                      class="icons">
                  </div>
                </div>
                <div class="right">
                  <img
                    src="{{ block.settings.image |  img_url: 'master' }}"
                    alt=""
                    class="icons">
                </div>
              </div>
            </div>
          </div>
        {% when 'slide_2' %}
          <div class="ss-item slide_2">
            <div class="container-fluid">
              <div class="ss-item-in">
                <div class="left">
                  <div class="head">
                    <div class="logo">
                      <img
                        src="https://cdn.shopify.com/s/files/1/0808/9639/3409/files/Group_7.svg?v=1758698597"
                        alt="Pitara Brand Icon"
                        class="icons">
                    </div>
                    <h2>{{ block.settings.head }}</h2>
                  </div>
                  <div class="ss2_bigimg pos-rel">
                    <img
                      src="{{ block.settings.left_image | img_url: 'master' }}"
                      alt=""
                      class="img ab">
                  </div>
                  <div class="stamp">
                    <img
                      src="{{ section.settings.stamp |  img_url: 'master' }}"
                      alt="Pitara Stamp"
                      class="icons">
                  </div>
                </div>
                <div class="right">
                  <div class="ss2_smimg">
                    <img
                      src="{{ block.settings.right_image |  img_url: 'master' }}"
                      alt=""
                      class="icons">
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% when 'slide_3' %}
          <div class="ss-item slide_3">
            <div class="container-fluid">
              <div class="ss-item-in" style="background-image: url({{ block.settings.background |  img_url: 'master' }});">
                <div class="txt_wrap">
                  <div class="head">
                    <h2>{{ block.settings.head }}</h2>
                  </div>
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                </div>
                <div class="ss3_img">
                  <img
                    src="{{ block.settings.image |  img_url: 'master' }}"
                    alt=""
                    class="icons">
                </div>
              </div>
            </div>
          </div>
      {% else %}
        {% endcase %}
      {% endfor %}
    </div>
  </section>

  {% schema %}
    {
      "name": "Side Scroll Section",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Add Video"
        }, {
          "type": "image_picker",
          "id": "stamp",
          "label": "Add your stamp"
        }
      ],
      "blocks": [
        {
          "name": "Slide 1",
          "type": "slide_1",
          "limit": 1,
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Add Image"
            }, {
              "type": "textarea",
              "id": "head",
              "label": "Heading"
            }, {
              "type": "richtext",
              "id": "text",
              "label": "Content"
            }
          ]
        }, {
          "name": "Slide 2",
          "type": "slide_2",
          "limit": 1,
          "settings": [
            {
              "type": "image_picker",
              "id": "left_image",
              "label": "Add Image"
            }, {
              "type": "image_picker",
              "id": "right_image",
              "label": "Add Image"
            }, {
              "type": "textarea",
              "id": "head",
              "label": "Heading"
            }, {
              "type": "richtext",
              "id": "text",
              "label": "Content"
            }
          ]
        }, {
          "name": "Slide 3",
          "type": "slide_3",
          "limit": 1,
          "settings": [
            {
              "type": "image_picker",
              "id": "background",
              "label": "Background Image"
            }, {
              "type": "image_picker",
              "id": "image",
              "label": "Add Image"
            }, {
              "type": "textarea",
              "id": "head",
              "label": "Heading"
            }, {
              "type": "richtext",
              "id": "text",
              "label": "Content"
            }
          ]
        }
      ]
    }
  {% endschema %}